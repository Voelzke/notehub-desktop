{
  "name": "notehub-desktop",
  "version": "0.1.0",
  "description": "NoteHub Desktop - Markdown note editor with YAML frontmatter",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "start": "vite build && electron .",
    "build:vue": "vite build",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.1",
    "vue": "^3.5.0"
  },
  "build": {
    "appId": "com.notehub.desktop",
    "productName": "NoteHub Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false,
      "artifactName": "NoteHub-Desktop-${version}-portable.${ext}"
    },
    "portable": {
      "splashImage": null
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
